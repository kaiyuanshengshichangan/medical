<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- popupwindows进入和退出的动画 -->
    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/popupwindow_enter_alpha</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_out_alpha</item>
    </style>
    <!-- 自定义Checkbox样式 -->
    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
    </style>
    <!-- 自定义dialog样式 -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- 自定义大按钮样式 -->
    <style name="button_big">
        <item name="android:textColor">@color/color_fwhite</item>
        <item name="android:textSize">@dimen/dimens_10_160</item>
        <item name="android:background">@drawable/shape05_title_background_color</item>
    </style>
    <!-- 自定义大按钮样式-纵向分布 -->
    <style name="button_big_vertical">
        <item name="android:textColor">@color/color_fwhite</item>
        <item name="android:textSize">@dimen/dimens_10_160</item>
        <item name="android:background">@drawable/shape05_title_background_color</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0px</item>
    </style>
    <!-- 全屏幕拉伸 -->
    <style name="layout_full">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <!-- 固定自身大小 -->
    <style name="layout_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 横向分布 -->
    <style name="layout_horizontal" parent="layout_full">
        <item name="android:layout_width">0px</item>
    </style>

    <!-- 纵向分布 -->
    <style name="layout_vertical" parent="layout_full">
        <item name="android:layout_height">0px</item>
    </style>

</resources>