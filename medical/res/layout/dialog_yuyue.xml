<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="预约"
        android:textColor="@color/title_background"
        android:textSize="@dimen/font_22"
        android:textStyle="italic" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/title_background" />

    <RadioGroup
        android:id="@+id/rg_yuyue_type"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_gravity="right"
        android:layout_weight="0.5"
        android:inputType="text"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/rbtn_jiuzhen"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:button="@null"
            android:checked="true"
            android:drawablePadding="30dp"
            android:drawableRight="@drawable/radio_button_myself"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="预约就诊"
            android:textColor="@color/color_black"
            android:textSize="20dip"
            android:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#CDCDCD" />

        <RadioButton
            android:id="@+id/rbtn_zhuyuan"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:button="@null"
            android:drawablePadding="30dp"
            android:drawableRight="@drawable/radio_button_myself"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="预约住院"
            android:textColor="@color/color_black"
            android:textSize="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#CDCDCD" />

        <RadioButton
            android:id="@+id/rbtn_rexian"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:button="@null"
            android:drawablePadding="30dp"
            android:drawableRight="@drawable/radio_button_myself"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="预约热线"
            android:textColor="@color/color_black"
            android:textSize="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#CDCDCD" />

        <RadioButton
            android:id="@+id/rbtn_sirenyisheng"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:button="@null"
            android:drawablePadding="30dp"
            android:drawableRight="@drawable/radio_button_myself"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="私人医生"
            android:textColor="@color/color_black"
            android:textSize="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#CDCDCD" />
    </RadioGroup>
	<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal" >

            <LinearLayout
                style="@style/layout_horizontal"
                android:layout_weight="1.0"
                android:gravity="center_horizontal" >

                <TextView
                    android:id="@+id/tv_cancel"
                    style="@style/layout_wrap"
                    android:background="@drawable/shape05_gray_color_empty"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/color_gray"
                    android:text="取消"
                    android:textSize="@dimen/font_16" />

            </LinearLayout>

            <LinearLayout
                style="@style/layout_horizontal"
                android:layout_weight="1.0"
                android:gravity="center_horizontal" >

                <TextView
                    android:id="@+id/tv_sure"
                    style="@style/layout_wrap"
                    android:background="@drawable/shape05_title_background_color_empty"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:text="确定"
                    android:textColor="@color/title_background"
                    android:textSize="@dimen/font_16" />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>