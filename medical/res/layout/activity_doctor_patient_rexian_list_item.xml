<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="horizontal"
    android:padding="10dp" >
    <!-- android:descendantFocusability="blocksDescendants" -->

    <ImageView
        android:id="@+id/iv_patient_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/mine_avatar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_patient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="徐老严"
            android:textColor="@color/color_black"
            android:textSize="@dimen/font_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约时间："
                android:textColor="@color/color_gray"
                android:textSize="@dimen/font_12" />

            <TextView
                android:id="@+id/tv_zhuyuan_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="2014-11-11"
                android:textColor="@color/color_black"
                android:textSize="@dimen/font_12" />

            <TextView
                android:id="@+id/tv_zhuyuan_time_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="09:00"
                android:textColor="@color/color_black"
                android:textSize="@dimen/font_12" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="--"
                android:textColor="@color/color_black"
                android:textSize="@dimen/font_12" />
            <TextView
                android:id="@+id/tv_zhuyuan_time_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="09:00"
                android:textColor="@color/color_black"
                android:textSize="@dimen/font_12" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/tv_agree"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="25dp"
                android:background="@drawable/shape005"
                android:gravity="center"
                android:text="同意预约"
                android:textColor="@color/color_gray"
                android:textSize="@dimen/font_12" />

            <TextView
                android:id="@+id/tv_refuse"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="27dp"
                android:background="@drawable/shape005"
                android:gravity="center"
                android:text="拒绝预约"
                android:textColor="@color/color_gray"
                android:textSize="@dimen/font_12" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_patient_add_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="2014-01-01 08:09"
            android:textColor="@color/color_gray"
            android:textSize="@dimen/font_12" />
    </LinearLayout>

</LinearLayout>