<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_weight="0.1"
        android:background="@color/title_background" >

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="上传药方"
            android:textColor="#ffffff"
            android:textSize="@dimen/font_22" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:text="提交"
            android:textColor="@color/color_fwhite"
            android:textSize="@dimen/font_20" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_fwhite"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp" >

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="12dp"
                        android:gravity="center"
                        android:text="姓名："
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/font_16" />

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@+id/tv_name"
                        android:background="@null"
                        android:hint="请输入您的真实姓名"
                        android:singleLine="true"
                        android:inputType="text"
                        android:textSize="@dimen/midtext" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#CDCDCD" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp" >

                    <TextView
                        android:id="@+id/tv_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="12dp"
                        android:gravity="center"
                        android:text="手机号："
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/font_16" />

                    <EditText
                        android:id="@+id/et_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@+id/tv_mobile"
                        android:background="@null"
                        android:hint="请输入您的手机号"
                        android:maxLength="11"
                        android:singleLine="true"
                        android:inputType="phone"
                        android:textSize="@dimen/midtext" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#CDCDCD" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp" >

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="12dp"
                        android:gravity="center"
                        android:text="地址："
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/font_16" />

                    <EditText
                        android:id="@+id/et_address"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@+id/tv_address"
                        android:background="@null"
                        android:hint="请输入您的地址"
                        android:singleLine="true"
                        android:textSize="@dimen/midtext" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#CDCDCD" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp" >

                    <TextView
                        android:id="@+id/tv_account1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:gravity="center"
                        android:text="药品名称："
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/font_16" />

                    <EditText
                        android:id="@+id/et_drugname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_account1"
                        android:background="@null"
                        android:singleLine="true"
                        android:gravity="center|left"
                        android:textSize="@dimen/font_14" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/tv_account1"
                        android:layout_alignParentBottom="true"
                        android:text="(备注：不知道药品名称可以进行文字说明)"
                        android:textColor="@color/color_gray"
                        android:textSize="@dimen/font_10" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#CDCDCD" />

                <RelativeLayout
                    android:id="@+id/rl_account_chongzhi"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" >

                    <TextView
                        android:id="@+id/tv_drug_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="12dp"
                        android:gravity="center"
                        android:text="购买数量："
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/font_16" />

                    <EditText
                        android:id="@+id/et_drug_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@+id/tv_drug_amount"
                        android:background="@null"
                        android:singleLine="true"
                        android:hint="请输入您想要购买的数量"
                        android:textSize="@dimen/midtext" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#CDCDCD" />

                <TextView
                    android:id="@+id/tv_doctor_introduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="药方说明"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/font_16" />

                <EditText
                    android:id="@+id/et_drug_introduce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape005"
                    android:gravity="top"
                    android:hint="请输入药方说明"
                    android:minLines="5"
                    android:padding="5dp"
                    android:textSize="@dimen/font_14" />

                <com.henglianmobile.medical.view.MyGridView
                    android:id="@+id/gv_drug_pics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:horizontalSpacing="2dp"
                    android:numColumns="3"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="10dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>