<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_friend_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/iv_huanyouquan_add_pics"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/iv_huanyouquan_add_pics"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/ib_del"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/iv_friend_photo"
        android:visibility="gone"
        android:src="@drawable/appitem_del_btn" />
    
</RelativeLayout>
