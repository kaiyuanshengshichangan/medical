<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="@color/title_background" >

        <ImageView
            android:id="@+id/btn_register_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="22sp" />
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@null"
            android:text="提交"
            android:textColor="@color/color_fwhite"
            android:textSize="@dimen/font_20" />
    </RelativeLayout>

    <LinearLayout
        style="@style/layout_vertical"
        android:layout_weight="1.0"
        android:padding="5dp"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/layout_vertical"
            android:layout_weight="0.6"
            android:padding="5dp"
            android:background="@color/color_fwhite"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1" >

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="12dp"
                    android:gravity="center"
                    android:text="昵称"
                    android:textColor="#000000"
                    android:textSize="@dimen/font_18" />

                <EditText
                    android:id="@+id/et_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/username"
                    android:background="@null"
                    android:hint="请输入昵称"
                    android:inputType="text"
                    android:textSize="@dimen/font_18" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#CDCDCD" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1" >

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="12dp"
                    android:gravity="center"
                    android:text="+86"
                    android:textColor="#000000"
                    android:textSize="@dimen/font_18" />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/phone"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:textSize="@dimen/font_18" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#CDCDCD" />

            <RelativeLayout
                android:id="@+id/rl_city"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1" >

                <TextView
                    android:id="@+id/tv_password"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="12dp"
                    android:gravity="center"
                    android:text="密码"
                    android:textColor="#000000"
                    android:textSize="@dimen/font_18" />

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/tv_password"
                    android:background="#00000000"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:maxLength="12"
                    android:textSize="@dimen/font_18" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1" >

                <TextView
                    android:id="@+id/tv_perform_password"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="12dp"
                    android:gravity="center"
                    android:text="确认密码"
                    android:textColor="#000000"
                    android:textSize="@dimen/font_18" />

                <EditText
                    android:id="@+id/et_perform_password"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/tv_perform_password"
                    android:background="#00000000"
                    android:hint="请输入确认密码"
                    android:inputType="textPassword"
                    android:maxLength="12"
                    android:textSize="@dimen/font_18" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#CDCDCD" />

            <RelativeLayout
                android:id="@+id/rl_userType"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="12dp"
                    android:gravity="center"
                    android:text="用户类型"
                    android:textColor="#000000"
                    android:textSize="@dimen/font_18" />

                <ImageView
                    android:id="@+id/iv_xiajiantou_usertype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/iv_xiajiantou" />

                <TextView
                    android:id="@+id/tv_userType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toLeftOf="@+id/iv_xiajiantou_usertype"
                    android:layout_toRightOf="@+id/textView3"
                    android:gravity="right"
                    android:hint="请选择"
                    android:text=""
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/font_18" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#CDCDCD" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/tv_getcode"
                    android:layout_width="120dp"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/shape005"
                    android:gravity="center"
                    android:text="获取验证"
                    android:textColor="#E8544A"
                    android:textSize="@dimen/font_18" />

                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="150dp"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/shape005"
                    android:gravity="center"
                    android:hint="请输入验证码"
                    android:textColor="#000000"
                    android:textSize="@dimen/font_18" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#CDCDCD" />
        </LinearLayout>
        <!-- 同意协议 注册按钮 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:gravity="center" >

            <CheckBox
                android:id="@+id/agreement_check"
                style="@style/CustomCheckboxTheme"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:background="@drawable/checkbox" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/agreement_check"
                android:text="我已阅读并同意"
                android:textColor="@color/gray_b0afaf"
                android:textSize="@dimen/font_16" />

            <Button
                android:id="@+id/btn_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="《天使之光用户协议》"
                android:textColor="@color/title_background"
                android:textSize="@dimen/font_16" />
        </LinearLayout>

        <View
            android:layout_weight="0.3"
			style="@style/layout_vertical"/>

    </LinearLayout>

</LinearLayout>